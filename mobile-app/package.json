{
  "name": "mobile-app",
  "version": "1.0.0",
  "homepage": "https://ZafarSherif.github.io/cardGameCollection",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "build:web": "PUBLIC_URL=/cardGameCollection expo export -p web",
    "build:ios": "cd ios && xcodebuild -workspace CardGameCollection.xcworkspace -scheme CardGameCollection -configuration Release -sdk iphoneos archive",
    "build:android": "cd android && ./gradlew assembleRelease",
    "fix-paths": "node fix-paths.js",
    "predeploy": "npm run build:web && npm run fix-paths",
    "deploy": "gh-pages -d dist --dotfiles"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "expo": "~54.0.22",
    "expo-build-properties": "^1.0.9",
    "expo-status-bar": "~3.0.8",
    "firebase": "^12.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.14.5",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "gh-pages": "^6.3.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
